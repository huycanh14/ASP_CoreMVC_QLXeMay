@model WebQLXeMay.Models.HDNhap

@{
    ViewData["Title"] = "Create HDNhap";
    ViewData["TitleHeader"] = "Thêm hóa đơn nhập";
}
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MaHoaDon" class="control-label"></label>
                <input asp-for="MaHoaDon" class="form-control" />
                <span asp-validation-for="MaHoaDon" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Tên xe</label>
                <select asp-for="MaXe"
                        class="form-control"
                        asp-items="@(new SelectList(ViewBag.XeMays, "MaXe", "TenXe"))"
                        id="MaXe"></select>
                <span asp-validation-for="MaXe" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Nhân viên</label>
                <select asp-for="MaNhanVien"
                        class="form-control"
                        asp-items="@(new SelectList(ViewBag.NhanViens, "MaNhanVien", "TenNhanVien"))"
                        id="MaNhanVien"></select>
                <span asp-validation-for="MaNhanVien" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DonGia" class="control-label"></label>
                <input asp-for="DonGia" class="form-control" type="number" />
                <span asp-validation-for="DonGia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SoLuong" class="control-label"></label>
                <input asp-for="SoLuong" class="form-control" type="number" />
                <span asp-validation-for="SoLuong" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ThueGTGT" class="control-label"></label>
                <input asp-for="ThueGTGT" class="form-control" type="number" />
                <span asp-validation-for="ThueGTGT" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MauSac" class="control-label"></label>
                <input asp-for="MauSac" class="form-control" />
                <span asp-validation-for="MauSac" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
@section Scripts {
    @{
        var message_done = ViewBag.Done;
        var message_err = ViewBag.Error;
    }
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $("#MaXe").select2({
            placeholder: "Lựa chọn tên xe",
            allowClear: true,
            theme: 'bootstrap4',
        });
        $("#MaNhanVien").select2({
            placeholder: "Lựa chọn tên nhân viên",
            allowClear: true,
            theme: 'bootstrap4',
        });
        var message_done = '@Html.Raw(message_done)';
        var message_err = '@Html.Raw(message_err)';
        if (message_done != "" && message_done != null) {
            toastr.success(message_done, 'Thành công!');
        } else if (message_err != "" && message_err != null) {
            toastr.error(message_err, 'Lỗi!');
        }
    </script>
}
