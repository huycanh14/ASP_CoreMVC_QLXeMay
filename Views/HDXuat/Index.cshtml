@model PagedList.Core.IPagedList<WebQLXeMay.Models.HDXuatShow>
@{
    ViewData["Title"] = "Index";
    ViewData["TitleHeader"] = "Danh sách Hóa đơn xuất";
}

<table class="table table-striped" border="1">
    <thead class=" table-success ">
        <tr>
            <th scope="col">
                Mã Hóa đơn
            </th>
            <th scope="col">
                Tên xe
            </th>
            <th scope="col">
                Tên khách hàng
            </th>
            <th scope="col">
                Đơn giá
            </th>
            <th scope="col">
                Số lượng
            </th>
            <th scope="col">
                Ngày lập
            </th>
            <th scope="col">
                Thuế GTGT
            </th>
            <th scope="col">
                Thành tiền
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        
         @foreach (var item in Model)
          {
            <tr>
                <td scope="row">
                    @item.MaHoaDon
                </td>
                <td>
                    @item.TenXe
                </td>
                <td>
                    @item.TenKH
                </td>
                <td>
                    @item.DonGia
                </td>
                <td>
                    @item.SoLuong
                </td>
                <td>@item.NgayLap</td>
                <td>@item.ThueGTGT %</td>
                <td>@item.ThanhTien</td>
                <td>
                    @*@Html.ActionLink("Edit", "Edit", new { id = item.MaNCC }) |
                    @Html.ActionLink("Details", "Details", new { id = item.MaNCC }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.MaNCC })*@
                </td>
            </tr>
          }
    </tbody>

</table>
<nav aria-label="Page navigation example">
    <pager list="@Model" options="@PagedListRenderOptions.TwitterBootstrapPager"
           class="pager-container"
           asp-controller="HDXuat" asp-action="Index" />
</nav>
@section Scripts
{
    @{
        var message_done = ViewBag.Done;
        var message_err = ViewBag.Error;
        var data = Model;
    }
    <script>
        let li_pag = $(".pagination > li");
        let ai_pag = $(".pagination > li > a")
        for (let i = 0; i < li_pag.length; i++) {
            li_pag[i].classList.add("page-item");
            ai_pag[i].classList.add("page-link");
        }
        console.log('@Html.Raw(data)')
        var message_done = '@Html.Raw(message_done)';
        var message_err = '@Html.Raw(message_err)';
        console.log(message_done)
        if (message_done != "" && message_done != null) {
            toastr.success(message_done, 'Thành công!');
        } else if (message_err != "" && message_err != null) {
            toastr.error(message_err, 'Lỗi!');
        }
    </script>
}